<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Recipes Recommendations</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
	<header>
		@* Capture the current page to highlight active links *@
		@{
			var pageName = ViewContext.RouteData.Values["page"];
		}

		<!-- NAVBAR -->
		<nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
			<a class="navbar-brand" asp-page="/Index" style="padding-left: 15px;">Recipes Recommendations</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link" asp-page="/Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/Ingredients">Ingredients</a>
					</li>
					<!-- Add more nav links if needed -->
				</ul>
			</div>
		</nav>
	</header>

	<!-- MAIN CONTENT -->
	<div class="container  flex-grow-1">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<!-- FOOTER -->
	<footer class="mt-auto border-top footer text-muted py-3">
		<div class="container text-center">
			&copy; @(System.DateTime.Now.Year) - Recipes Recommendations -
			<a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<!-- Scripts -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
